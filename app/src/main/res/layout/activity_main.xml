<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wi-Fi Scanner"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333"
        android:paddingBottom="12dp" />

    <!-- Wi-Fi Networks List -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="2dp" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/buttonToggleAutoMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#BDBDBD"
            android:text="Start Auto Mode"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp" />

        <Button
            android:id="@+id/buttonRescan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#BDBDBD"
            android:text="Rescan Wi-Fi"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp" />

        <Button
            android:id="@+id/buttonSendWifiInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDBDBD"
            android:text="Send Wi-Fi Information"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp" />
    </LinearLayout>

</LinearLayout>
